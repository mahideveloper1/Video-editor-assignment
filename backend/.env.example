# API Configuration
APP_NAME=AI Video Editor API
APP_VERSION=1.0.0
DEBUG=false

# Server Configuration
HOST=0.0.0.0
PORT=8000

# CORS Configuration (comma-separated list)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# LLM Configuration
# Choose your LLM provider: "openai", "anthropic", or "google"/"gemini"
LLM_PROVIDER=openai

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
# Recommended models: gpt-4o-mini, gpt-4o, gpt-3.5-turbo
LLM_MODEL=gpt-4o-mini

# Anthropic Configuration (if using Claude)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
# For Anthropic: claude-3-5-sonnet-20241022, claude-3-opus-20240229

# Google Gemini Configuration (if using Gemini)
GOOGLE_API_KEY=your_google_api_key_here
# For Gemini: gemini-pro, gemini-1.5-pro, gemini-1.5-flash

# LLM Settings
LLM_TEMPERATURE=0.7

# File Upload Settings
MAX_UPLOAD_SIZE=524288000  # 500MB in bytes
ALLOWED_VIDEO_FORMATS=.mp4,.mov,.avi,.webm

# Session Settings
SESSION_TTL=3600  # 1 hour in seconds

# Default Subtitle Styling
DEFAULT_FONT_FAMILY=Arial
DEFAULT_FONT_SIZE=32
DEFAULT_FONT_COLOR=white
DEFAULT_SUBTITLE_POSITION=bottom

# FFmpeg Settings
FFMPEG_THREADS=4
VIDEO_QUALITY=high  # high, medium, low
